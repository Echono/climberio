<mvc:View
	controllerName="climberioui.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'climberioui/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="mainPage"
		showHeader="false">
		<content>
			<FlexBox id="mainWrapper" height="100%" justifyContent="Center" alignItems="Center">
				<Panel id="mainBackgroundWrapper" backgroundDesign="Solid">
					<VBox id="mainContent" class="sapUiSmallMargin" alignItems="Center">
						<Title text="{i18n>welcome}" class="sapUiSmallMarginBottom" titleStyle="H2"/>
						<Button
							id="googleLoginButton"
							text="{i18n>googleLoginText}"
							icon="https://www.gstatic.com/marketing-cms/assets/images/d5/dc/cfe9ce8b4425b410b49b7f2dd3f3/g.webp=s48-fcrop64=1,00000000ffffffff-rw"
							press=".loginWithGoogle">
						</Button>
					</VBox>
				</Panel>
			</FlexBox>
		</content>
	</Page>

</mvc:View>
