<mvc:View
	controllerName="climberioui.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'climberioui/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page"
		showHeader="false">
		<content>
			<IllustratedMessage
				title="{i18n>welcome}"
				illustrationType="sapIllus-ResizingColumns"
				enableVerticalResponsiveness="true"
				description="{i18n>loginMethod}">
				<additionalContent>
					<Button
						id="googleLoginButton"
						text="{i18n>googleLoginText}"
						icon="https://www.gstatic.com/marketing-cms/assets/images/d5/dc/cfe9ce8b4425b410b49b7f2dd3f3/g.webp=s48-fcrop64=1,00000000ffffffff-rw"
						press=".loginWithGoogle">
					</Button>
				</additionalContent>
			</IllustratedMessage>
		</content>
	</Page>

</mvc:View>
