<mvc:View controllerName="climberioui.controller.Account"
    displayBlock="true"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'climberioui/model/formatter'
	}">

	<ObjectPageLayout
		id="accountPage"
		headerContentPinned="true"
		showHeaderContent="true"
		showTitleInHeaderContent="true"
		toggleHeaderOnTitleClick="false"
		headerContentPinnable="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:HBox>
						<m:Title text="{i18n>account}" wrapping="true"/>
					</m:HBox>
				</expandedHeading>
				<actions>
					<m:Button text="{i18n>edit}" icon="sap-icon://edit" tooltip="edit">
						<m:layoutData>
							<m:OverflowToolbarLayoutData priority="NeverOverflow"/>
						</m:layoutData>
					</m:Button>
					<m:Button text="{i18n>logout}" icon="sap-icon://disconnected" press=".onLogoutPress" type="Emphasized"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
			<m:FlexBox wrap="Wrap">
				<m:Avatar class="sapUiSmallMarginEnd" src="{account>/avatar}"  displaySize="L" />
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Title text="{account>/username}" titleStyle="H4" />
				</layout:VerticalLayout>
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
				</layout:VerticalLayout>
				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>
	</ObjectPageLayout>

</mvc:View>
