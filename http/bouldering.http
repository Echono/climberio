@url = http://localhost:4004
@path = bouldering
@login = user:pass
### METADATA
GET {{url}}/{{path}}/$metadata
Authorization: Basic {{login}}

########################
######## ROUTES ########
########################

### GET Routes
GET {{url}}/{{path}}/Routes?$expand=tags($expand=tag),registrations
Authorization: Basic {{login}}

### Get a specific Route
GET {{url}}/{{path}}/Routes('{{route1id}}')
Authorization: Basic {{login}}

### POST Routes
# @name route1
@route1id = {{route1.response.body.$.ID}}
POST {{url}}/{{path}}/Routes
content-Type: application/json
Authorization: Basic {{login}}

{
    "name": "New test route",
    "officialGrade": "Blue",
    "amountOfHolds": 15,
    "active": true,
    "removedAt": null,
    "wallType": "Slab",
    "tags": [
        {"tag_ID": "{{tag1id}}"},
        {"tag_ID": "{{tag2id}}"},
        {"tag_ID": "{{tag3id}}"}
    ]
}

### DELETE a Route
DELETE {{url}}/{{path}}/Routes('{{route1id}}')
Authorization: Basic {{login}}

### GET Tags
GET {{url}}/{{path}}/Tags?$expand=routes
Authorization: Basic {{login}}

########################
######### TAGS #########
########################

### POST a new Tag
# @name tag1
@tag1id = {{tag1.response.body.$.ID}}
POST {{url}}/{{path}}/Tags
content-Type: application/json
Authorization: Basic {{login}}

{
    "name": "Heelhook",
    "tagText": "Heel Hook"
}


### POST another tag
# @name tag2
@tag2id = {{tag2.response.body.$.ID}}
POST {{url}}/{{path}}/Tags
content-Type: application/json
Authorization: Basic {{login}}

{
    "name": "ToeHook",
    "tagText": "Toe Hook"
}

### POST a third tag
# @name tag3
@tag3id = {{tag3.response.body.$.ID}}
POST {{url}}/{{path}}/Tags
content-Type: application/json
Authorization: Basic {{login}}

{
    "name": "Dyno",
    "tagText": "Dyno"
}


### DELETE a Tag
DELETE {{url}}/{{path}}/Tags('{{tag3id}}')
Authorization: Basic {{login}}

